<h1>Contact Us</h1>

<%= form_for(@contact_message) do |f| %>
  <%= f.error_messages %>

  <fieldset>
	<%= f.label :name, "Your Name *" %> <%= f.text_field :name %> <br/>
	<%= f.label :email, "Email Address *" %> <%= f.text_field :email %> <br/>
	<%= f.label :phone_number, "Telephone Number" %> <%= f.text_field :phone_number %> <br />
  </fieldset>

   <fieldset>
	<%= f.label :message %> <%= f.text_area :message, :class => "contact_message" %> <br />
   </fieldset>
    <%= f.submit 'Create' %>
<% end %>
